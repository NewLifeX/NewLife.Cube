@using NewLife;
@using NewLife.Common;
@using NewLife.Cube.WebMiddleware;
@{
    var sys = SysConfig.Current;
    var set = NewLife.Cube.Setting.Current;

    var runInfo = !set.ShowRunTime ? "" : RunTimeMiddleware.GetInfo(this.Context);
}
<footer class="footer footer-transparent d-print-none">
    <div class="container">
        @if (set.ShowRunTime)
        {
            <div class="row">
                @Html.Raw(runInfo)
            </div>
        }
        <div class="row text-center align-items-center flex-row-reverse">
            <div class="col-lg-auto ms-lg-auto">
                <ul class="list-inline list-inline-dots mb-0">
                    <li class="list-inline-item"><a href="#" class="link-secondary">Documentation</a></li>
                    <li class="list-inline-item"><a href="#" class="link-secondary">License</a></li>
                    <li class="list-inline-item"><a href="#" target="_blank" class="link-secondary" rel="noopener">Source code</a></li>
                </ul>
            </div>
            <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                <ul class="list-inline list-inline-dots mb-0">
                    <li class="list-inline-item">
                        Copyright &copy; @set.Copyright .
                        All rights reserved.
                    </li>
                    @if (!set.Registration.IsNullOrEmpty())
                    {
                        <li class="list-inline-item">
                            <a href="https://beian.miit.gov.cn" target="_blank">@set.Registration</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</footer>