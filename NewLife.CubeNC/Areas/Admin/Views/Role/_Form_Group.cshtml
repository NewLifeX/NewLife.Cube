@using NewLife;
@using XCode;
@using XCode.Configuration;
@{
    var pair = (ValueTuple<IEntity, DataField>)Model;
    var entity = pair.Item1;
    var item = pair.Item2;

    var set = NewLife.Cube.Setting.Current;
    var cls = set.FormGroupClass;
    if (cls.IsNullOrEmpty()) { cls = "form-group col-xs-12 col-sm-6 col-lg-4"; }
}
@if (item.Name == "Permission")
{
    if (!entity.IsNullKey)
    {
        @await Html.PartialAsync("SetPermission", new { Role = entity })
    }
}
else
{
    <div class="@cls">
        @await Html.PartialAsync("_Form_Item", new ValueTuple<IEntity, DataField>(entity, item))
    </div>
}